    "dotenv": "^17.2.0",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.4",
    "@types/express": "^4.17.21",
    "@types/node": "^20.6.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.20.3",
    "typescript": "^5.2.2"
  }
}
